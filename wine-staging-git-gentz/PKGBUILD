    "wine-staging=$(    printf '%s' "$pkgver" | sed 's/\+wine.*//')"
    "wine-staging-git=$(printf '%s' "$pkgver" | sed 's/\+wine.*//')"
)
conflicts=('wine' 'wine-wow64' 'wine-staging' 'wine-staging-git' 'wine-staging-gentz')
